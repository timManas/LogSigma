<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e4161620"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dashboard"
        android:id="@+id/tDashboard"
        android:textColor="#ffffc300"
        android:layout_above="@+id/tWifiDashboard"
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wifi"
        android:id="@+id/tWifiDashboard"

        android:textColor="#ffffffff"
        android:layout_above="@+id/tFrequencyDashboard"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preferences"
        android:id="@+id/tFrequencyDashboard"

        android:textColor="#ffffffff"
        android:layout_above="@+id/tTimeSheetDashboard"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TimeSheet"
        android:id="@+id/tTimeSheetDashboard"

        android:textColor="#ffffffff"
        android:layout_above="@+id/imgbExport"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbExport"
        android:background="@drawable/export"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/imgbDSetup"
        android:layout_alignStart="@+id/imgbDSetup"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbStartService"
        android:background="@drawable/start"
        android:layout_below="@+id/imgbExport"
        android:layout_toLeftOf="@+id/tvFloaterTemp"
        android:layout_toStartOf="@+id/tvFloaterTemp"
        android:layout_marginRight="10dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbStopService"
        android:background="@drawable/stop"
        android:layout_below="@+id/imgbExport"
        android:layout_toRightOf="@+id/tvFloaterTemp"
        android:layout_toEndOf="@+id/tvFloaterTemp"
        android:layout_marginLeft="10dp"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbDSetup"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/next"
        android:layout_below="@+id/imgbStartService"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvFloaterTemp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tStatus"
        android:layout_below="@+id/imgbDSetup"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff727c"
        android:textSize="40dp"
        android:layout_marginBottom="10dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbFAQ"
        android:background="@drawable/faqhelpx"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        />

</RelativeLayout>