<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff372d5c"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbSavePref"
        android:background="@drawable/next"
        android:layout_below="@+id/imgbEveryWeek"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How Often ?"
        android:id="@+id/tvDVM"
        android:textColor="#ffffffff"
        android:layout_above="@+id/imgbEveryWeek"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_marginBottom="20dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbEveryWeek"
        android:background="@drawable/weeklyx"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbEveryDay"
        android:background="@drawable/dailyx"
        android:layout_alignTop="@+id/imgbEveryWeek"
        android:layout_toLeftOf="@+id/imgbEveryWeek"
        android:layout_toStartOf="@+id/imgbEveryWeek"
        android:layout_marginRight="10dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbEveryMonth"
        android:background="@drawable/monthlyx"
        android:layout_alignTop="@+id/imgbEveryWeek"
        android:layout_toRightOf="@+id/imgbEveryWeek"
        android:layout_toEndOf="@+id/imgbEveryWeek"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>