<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff636363"
    >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1" >

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Frequently Asked Questions"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff7da9ff"
                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="What is this App ?"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffc300"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="This app tracks the amount of hours spent at your work. No more manually logging your hours."
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="How does it do this ? "
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textIsSelectable="true"
                android:textColor="#ffffc300"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="It automatically tracks your WIFI and creates a log of Start / End time of your shift "
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Great ! Then what happens ?"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffc300"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Then you can export the file to your email account "
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Does it export automatically ? "
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffc300"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Yes and No. It will send you a reminder to export but you have to send it by email manually... but dont worry the whole process is automated."
                android:id="@+id/textView13"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView14"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Great ...so How do I set up this App  to track my hours ?"
                android:id="@+id/textView15"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffc300"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1. Turn ON your WIFI  ( Not Your Data / 3G/ LTE) "
                android:id="@+id/textView16"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="2. Follow the Yellow Arrow"
                android:id="@+id/textView17"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3. Choose your WORK Wifi Hotspot"
                android:id="@+id/textView18"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="4. Chose how often you want to be reminded ?"
                android:id="@+id/textView19"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="5. Enter your Email "
                android:id="@+id/textView20"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="6. Press the GREEN Play button to start "
                android:id="@+id/textView21"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="7. Done"
                android:id="@+id/textView22"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView23"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nice ! But what happens if I want the App to stop tracking my hours"
                android:id="@+id/textView24"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffc300"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text= "You can stop it by pressing the Red STOP button on the Dashboard "
                android:id="@+id/textView25"
                android:textColor="#ffffffff"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView26"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Help ! My hours are not being tracked "
                android:id="@+id/textView27"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffc300"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text= " Easy. Just press the Red Stop button on the Dashboard and re-Enter your info. Then press Start again =) "
                android:id="@+id/textView28"
                android:textColor="#ffffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewGitSmall"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sweet ! Anything else I should know ? "
                android:id="@+id/textViewGitLarge"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffc300"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text= " This project is Open sourced on GitHub ! "
                android:id="@+id/textViewGitMedium"
                android:textColor="#ffffffff"
                />



            </TableLayout>

        </ScrollView>

</LinearLayout>